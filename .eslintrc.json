{
    "env": {
        "node": true,
        "es2021": true,
        "jest":true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent" : [
            "warning",
            "tab"
        ],
        "linebreak-style" : [
            "error",
            "unix"
        ],
        "quotes" : [
            "error",
            "single"
        ],
        "semi" : [
            "error",
            "always"
        ],
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs" : "off"
        
    }
}
